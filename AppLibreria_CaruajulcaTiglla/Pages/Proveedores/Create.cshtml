@page
@using AppLibreria_CaruajulcaTiglla.Models
@model AppLibreria_CaruajulcaTiglla.Pages.Proveedores.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Proveedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Proveedor.RazonSocial" class="control-label"></label>
                <input asp-for="Proveedor.RazonSocial" class="form-control" />
                <span asp-validation-for="Proveedor.RazonSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proveedor.FechaContrato" class="control-label"></label>
                <input asp-for="Proveedor.FechaContrato" class="form-control" type="date"/>
                <span asp-validation-for="Proveedor.FechaContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proveedor.Valoracion" class="control-label"></label>
                <select asp-for="Proveedor.Valoracion" class="form-select"
                        asp-items="Html.GetEnumSelectList<Valoracion>()">
                    <option value="">Seleccione Valoración</option>
                </select>
                <span asp-validation-for="Proveedor.Valoracion" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
